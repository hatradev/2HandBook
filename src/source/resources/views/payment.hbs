<div class='payment container'>
  <div class='delivery-addr delivery-box'>
    <div class='title'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='icon icon-tabler icon-tabler-map-pin-filled'
        width='24'
        height='24'
        viewBox='0 0 24 24'
        stroke-width='2'
        stroke='currentColor'
        fill='none'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
        <path
          d='M18.364 4.636a9 9 0 0 1 .203 12.519l-.203 .21l-4.243 4.242a3 3 0 0 1 -4.097 .135l-.144 -.135l-4.244 -4.243a9 9 0 0 1 12.728 -12.728zm-6.364 3.364a3 3 0 1 0 0 6a3 3 0 0 0 0 -6z'
          stroke-width='0'
          fill='currentColor'
        ></path>
      </svg>
      <p>Delivery Address</p>
    </div>
    <div class='del-info row'>
      <div class='del-first col-1'>
        <p>Name:</p>
        <p>Phone:</p>
        <p>Address:</p>
      </div>
      <div class='del-second col-10'>
        <p>{{accBuyer.firstName}} {{accBuyer.lastName}}</p>
        <p>{{accBuyer.phone}}</p>
        <p>{{accBuyer.address}}</p>
      </div>
    </div>
  </div>
  <div class='delivery-box container'>
    <div class='shop-box'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='icon icon-tabler icon-tabler-brand-shopee'
        width='24'
        height='24'
        viewBox='0 0 24 24'
        stroke-width='2'
        stroke='currentColor'
        fill='none'
        stroke-linecap='round'
        stroke-linejoin='round'
      >
        <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
        <path
          d='M4 7l.867 12.143a2 2 0 0 0 2 1.857h10.276a2 2 0 0 0 2 -1.857l.867 -12.143h-16z'
        ></path>
        <path d='M8.5 7c0 -1.653 1.5 -4 3.5 -4s3.5 2.347 3.5 4'></path>
        <path
          d='M9.5 17c.413 .462 1 1 2.5 1s2.5 -.897 2.5 -2s-1 -1.5 -2.5 -2s-2 -1.47 -2 -2c0 -1.104 1 -2 2 -2s1.5 0 2.5 1'
        ></path>
      </svg>
      <div class='shopname'>
        {{product.idAccount.shopName}}
      </div>
    </div>
    <hr />
    <div class='prod-box'>
      <div class='product row'>
        <a href='#' class='col-2 img'>
          <img
            src= {{product.image}}
            class='pay-prod-img'
            alt='Something ...'
          />
        </a>
        <div class='col-10 row'>
          <p class='pay-prod-title col'><strong>{{product.name}}</strong></p>
          <p class='pay-prod-price col'>{{formatCurrency product.price}}</p>
          <div class='pay-prod-info'>
            <p class='pay-prod-quantity'>Quantity: {{quantity}}</p>
            <p class='pay-prod-date'>Date: {{getCurrentDate}}</p>
          </div>

        </div>
      </div>
