<div class='account-profile-header'>
  <div class='container-fluid'>
    <a class='navbar-brand' href='#'>
      ACCOUNT PROFILE
    </a>
  </div>
</div>

<div class='account-profile-main'>
  <div class='row'>
    <div class='col-4'>
      <div class='avatar'>
        <div class='avatar-left'>
          <i class='fa-solid fa-user'></i>
        </div>

        <div class='avatar-right'>
          <div class='info-avatar'>
            <span class='avatar-name'>Dinh Quy Trieu</span>
            <span class='avatar-mail mail'>trieudinh@gmail.com</span>
          </div>
          <div class='signup-btn'>
            <button type='button' class='btn btn-outline-primary'>SIGN OUT</button>
          </div>
        </div>
      </div>
      <div class='my-account'>
        <button type='button' class='btn btn-outline-secondary bg-blue'>
          <i class='fa-solid fa-pen-to-square color-white'></i>
          <a
            class='page-link color-white'
            href='http://localhost:3000/profile'
          >My account</a>
        </button>
      </div>
      <div class='my-order'>
        <button type='button' class='btn btn-outline-secondary'>
          <i class='fa-solid fa-cart-shopping'></i>
          <a class='page-link' href='http://localhost:3000/myorder'>My order</a>
        </button>
      </div>
      <div class='become-seller'>
        <button type='button' class='btn btn-outline-secondary'>
          <i class='fa-solid fa-user'></i>
          <a class='page-link' href='http://localhost:3000/becomeseller'>Become
            seller</a>
        </button>
      </div>
      <div class='remain'></div>
    </div>
    <div class='col-8'>
      <form class='row g-3' id='form-1'>
        <div class='col-md-6'>
          <div class='form-group'>
            <label class='form-label'>First name*</label>
            <input id='first_name' type='text' class='form-control' />
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-md-6'>

          <div class='form-group'>
            <label class='form-label'>Last name*</label>
            <input id='last_name' type='text' class='form-control' />
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-12'>
          <div class='form-group'>
            <label class='form-label'>Display name*</label>
            <input
              id='display_name'
              type='text'
              class='form-control'
              placeholder=''
            />
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-12'>
          <div class='form-group'>
            <label class='form-label'>Email*</label>
            <input id='email' type='text' class='form-control' placeholder='' />
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-md-6'>
          <div class='form-group'>
            <label class='form-label'>Phone number*</label>
            <input id='phone_number' type='text' class='form-control' />
            <span class='form-message'></span>
          </div>
        </div>
        <div class='col-md-6'>
          <label class='form-label'>City/Province</label>
          <select id='inputState' class='form-select'>
            <option selected>Choose</option>
            <option>TP HCM</option>
            <option>HA NOI</option>
            <option>DA NANG</option>
            <option>...</option>
          </select>
        </div>
        <div class='col-12 flex-between'>
          <button
            type='button'
            class='btn btn-outline-secondary half_height'
            data-bs-toggle='modal'
            data-bs-target='#exampleModal'
            data-bs-whatever='@mdo'
          >CHANGE PASSWORD</button>

          <button type='button' class='btn btn-outline-primary half_height'>SAVE
            CHANGE</button>

          <div
            class='modal fade'
            id='exampleModal'
            tabindex='-1'
            aria-labelledby='exampleModalLabel'
            aria-hidden='true'
          >
            <div
              class='modal-dialog modal-dialog-centered modal-dialog-scrollable'
            >
              <div class='modal-content'>
                <div class='modal-header'>
                  <h5 class='modal-title' id='exampleModalLabel'>CHANGE PASSWORD</h5>
                  <button
                    type='button'
                    class='btn-close'
                    data-bs-dismiss='modal'
                    aria-label='Close'
                  ></button>
                </div>
                <div class='modal-body'>
                  <form>
                    <div class='mb-3'>

                      <label for='inputPassword5' class='form-label'>Present
                        password</label>
                      <input
                        type='password'
                        id='inputPassword5'
                        class='form-control'
                        aria-describedby='passwordHelpBlock'
                      />
                    </div>
                    <div class='mb-3'>

                      <label for='inputPassword5' class='form-label'>New
                        password</label>
                      <input
                        type='password'
                        id='inputPassword5'
                        class='form-control'
                        aria-describedby='passwordHelpBlock'
                      />
                      <div id='passwordHelpBlock' class='form-text'>
                        Your password must be 8-20 characters long, contain
                        letters and numbers, and must not contain spaces,
                        special characters, or emoji.
                      </div>
                    </div>
                  </form>
                </div>
                <div class='modal-footer'>
                  <button
                    type='button'
                    class='btn btn-outline-secondary'
                    data-bs-dismiss='modal'
                  >Close</button>
                  <button
                    type='button'
                    class='btn btn-outline-secondary'
                    data-bs-dismiss='modal'
                  >OK</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src='js/profile.js'></script>
<script src='js/validation.js'></script>